{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "A modern MERN stack portfolio with stunning UI/UX",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "vercel-build": "cd client && npm install && npm run build",
    "setup": "npm install && npm run install-client"
  },
  "keywords": [
    "portfolio",
    "mern",
    "react",
    "node",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.4",
    "vite": "^4.4.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
